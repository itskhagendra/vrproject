.card {
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.card-title {
    font-size: 18px;
    font-weight: bold;
    margin-top: 10px;
}

.card-description {
    font-size: 14px;
    color: #555;
    margin-top: 5px;
}

.card-image {
    width: 100px;
    height: 100px;
}

.card-button {
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: white;
    margin: 10px;
}
